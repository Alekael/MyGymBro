        android:id="@+id/mainActivity"
        android:name="dadm.alsadel.mygymbro.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/stepOneFragment"
        android:name="dadm.alsadel.mygymbro.ui.onboarding.StepOneFragment"
        android:label="StepOneFragment" >
        <action
            android:id="@+id/toStepTwo"
            app:destination="@id/stepTwoFragment" />
